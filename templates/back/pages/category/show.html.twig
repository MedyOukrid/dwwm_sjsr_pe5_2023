{% extends 'back/base.html.twig' %}

{% block title %}
    {{ 'back.pages.category.show.title'|trans({'%category%': category.name }) }}
{% endblock %}

{% block body %}

    <div class="d-flex my-4">
        <a class="main-link my-auto me-3" href="{{ path('app_admin_category_index') }}">
            <i class="fa fa-arrow-left fa-2x"></i>
        </a>
        <h1>{{ 'back.pages.category.show.title'|trans({'%category%': category.name }) }}</h1>
        <a class="main-link my-auto ms-5"
           href="{{ path('app_admin_category_edit', {'slug': category.slug}) }}"
           title="{{ 'common.title.edit'|trans }}"
        >
            <i class="fa fa-pen fa-2x"></i>
        </a>
    </div>

    {% if category.image is not null %}
        <img src="{{ category.image }}" alt="{{ category.name }}">
    {% else %}
        <p>Pas d'image pour cette cat√©gorie</p>
    {% endif %}

    {{ include('back/pages/category/_delete_form.html.twig') }}
{% endblock %}
