{% extends 'back/base.html.twig' %}

{% block body %}

    <div class="d-flex my-4">
        <h1 class="my-auto">{{ 'back.pages.country.index.title'|trans }}</h1>
        <a class="main-link my-auto ms-5"
           href="{{ path('app_admin_country_new') }}"
           title="{{ 'common.title.add'|trans }}"
        >
            <i class="fa fa-plus-circle fa-2x"></i>
        </a>
    </div>

    <table class="table table-striped table-hover table-dark">
        <thead>
            <tr>
                <th>{{ 'back.pages.country.index.table.header.flag'|trans }}</th>
                <th>{{ 'back.pages.country.index.table.header.name'|trans }}</th>
                <th>{{ 'back.pages.country.index.table.header.nationality'|trans }}</th>
                <th>{{ 'back.pages.country.index.table.header.code'|trans }}</th>
                <th>{{ 'back.common.table.header.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for country in countries %}
                <tr>
                    <td><img src="{{ country.urlFlag }}" alt="{{ country.name }}"></td>
                    <td>{{ country.name }}</td>
                    <td>{{ country.nationality }}</td>
                    <td>{{ country.code }}</td>
                    <td>
                        <a class="main-link"
                           href="{{ path('app_admin_country_edit', {'slug': country.slug}) }}"
                           title="{{ 'common.title.edit'|trans }}"
                        >
                          <i class="fa fa-pen"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
