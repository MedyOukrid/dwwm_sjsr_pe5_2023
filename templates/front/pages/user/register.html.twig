{% extends 'front/base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {{ 'pages.user.register.title'|trans }}
{% endblock %}

{% block body %}

    <h1 class="text-center">{{ 'pages.user.register.title'|trans }}</h1>

    <div class="col-lg-6 col-md-8 col-sm-12 mx-auto">
        {{ form_start(form) }}
            <div class="my-4">
                {{ form_row(form.name) }}
            </div>
            <div>
                {{ form_row(form.email) }}
            </div>
            <div class="my-4">
                {{ form_row(form.nickname) }}
            </div>
            <div>
                {{ form_row(form.password) }}
            </div>
            <button class="btn btn-success my-4">
                {{ 'common.button.confirm'|trans }}
            </button>
        {{ form_end(form) }}
    </div>

{% endblock %}

